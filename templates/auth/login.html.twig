{% extends 'base.html.twig' %}

{% block title %}Inicio de Sesión{% endblock %}
{% block stylesheets %}
 <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
 {% endblock %}
{% block body %}
    <div class="btn-back-content" style="margin: 5px 0; ">
        <a class="back_btn" href="javascript:history.go(-1);" type="button">
            <i class="fa-solid fa-chevron-left"></i> Regresar
        </a>
    </div>
    <form method="post" class="form_container">
        <div class="form-login">
            <div>
                <img class="img_login" src="https://s3.abcstatics.com/media/gurmesevilla/2012/01/comida-rapida-casera.jpg" >
            </div>
            <div class="login_form">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <h1 class="h3 mb-3 font-weight-normal">Inicio de Sesión</h1>
                <label for="username">Correo</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control input_login" autocomplete="email" required autofocus>
                <label for="password">Contraseña</label>
                <input type="password" name="_password" id="password" class="form-control input_login" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}">
                <div class="btn-login">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Acceder
                    </button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
