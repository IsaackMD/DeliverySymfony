{% extends 'base.html.twig' %}

{% block title %}Register De Residente{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('styles/Pags_Principal.css') }}">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="formularioRegistro">
        <h1>Register De Residente</h1>
        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                </svg>
                <strong>Error: </strong> {{ error }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr' : { 'class' : 'formularioCuerpo' , 'enctype': 'multipart/form-data'}}) }}

        <div class="columnasFormulario">
            {{ form_row(registrationForm.nombre) }}
            {{ form_row(registrationForm.ApellidoP) }}
        </div>
        <div class="columnasFormulario">
            {{ form_row(registrationForm.ApellidoM) }}
            {{ form_row(registrationForm.username)}}
        </div>
        <div class="columnasFormulario">
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword)}}
        </div>
        <div class="columnasFormulario">
            {{ form_row(registrationForm.Sexo)}}
        </div>
        <div class="columnasFormulario">
            {{ form_row(registrationForm.Telefono) }}
            {{ form_row(registrationForm.Fecha_Na)}}
        </div>
        <div class="columnasFormulario"style="margin: 5px 0; display: block;">
            <p>Imagen</p>
            <input class="form-control" name="fotito" id="fotito" type="file"  accept=".jpg" required/>
        </div>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-success">Register</button>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}

